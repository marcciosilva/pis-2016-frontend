<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    android:weightSum="1"
    tools:context=".ui.fragments.EventDetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/EventDetails.HalfLinear">
                <TextView
                    android:text="Nombre informante"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_name_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_name_value" />
            </LinearLayout>
            <LinearLayout
                style="@style/EventDetails.HalfLinear">
                <TextView
                    android:text="Telefono informante"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_phone_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_phone_value" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/EventDetails.HalfLinear">
                <TextView
                    android:text="Calle"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_street_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_street_value" />

                <TextView
                    android:text="Corner"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_corner_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_corner_value" />

                <TextView
                    android:text="NÃºmero"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_number_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_number_value" />
            </LinearLayout>
            <LinearLayout
                style="@style/EventDetails.HalfLinear">
                <TextView
                    android:text="Departamento"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_department_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_department_value" />

                <TextView
                    android:text="Sector"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/informant_sector_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/informant_sector_value" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:text="Aca va el mapa"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                style="@style/EventDetails.FieldLabel" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/EventDetails.HalfLinear">
                <TextView
                    android:text="Motivo"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/category_label" />
                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/category_value" />
            </LinearLayout>
            <LinearLayout
                style="@style/EventDetails.HalfLinear">
                <TextView
                    android:text="Tipo"
                    style="@style/EventDetails.FieldLabel"
                    android:id="@+id/type_label" />

                <TextView
                    android:text="@string/event_details_missing_value"
                    style="@style/EventDetails.FieldValue"
                    android:id="@+id/type_value" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/EventDetails.HalfLinear">

            </LinearLayout>
            <LinearLayout
                style="@style/EventDetails.HalfLinear">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>