<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/EventDetails.HalfLinear">

    <TextView
        style="@style/EventDetails.FieldLabel"
        android:text="Multimedia"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="30">

        <ImageButton
            android:id="@+id/button_images"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@color/colorTransparent"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_photo_library_black_36dp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/button_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@color/colorTransparent"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_video_library_black_36dp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/button_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@color/colorTransparent"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_library_music_black_36dp"
            android:visibility="visible"/>


    </LinearLayout>

</LinearLayout>